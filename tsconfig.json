{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "removeComments": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/index.node.ts",
    "src/index.browser.ts",
    "src/default.d.ts",
    "src/actions.d.ts",
    "src/exporters.d.ts",
  ]
}
